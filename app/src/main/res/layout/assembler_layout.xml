<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"

                android:textSize="20dp" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/messageTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/holo_red_light" />

                    <RelativeLayout
                        android:id="@+id/rTypeRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/messageTV">

                        <HorizontalScrollView
                            android:id="@+id/scroll1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="horizontal">


                                <Button
                                    android:id="@+id/add"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="ADD"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/sub"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="SUB"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/and"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="AND"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/or"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="OR"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/nor"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="NOR"
                                    android:textSize="20dp" />



                                <Button
                                    android:id="@+id/slt"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="SLT"
                                    android:textSize="20dp" />


                            </LinearLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/scroll1"
                            android:layout_centerHorizontal="true"
                            android:text="R-type" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/iTypeRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rTypeRL"

                        >

                        <HorizontalScrollView
                            android:id="@+id/scroll2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:orientation="horizontal">


                                <Button
                                    android:id="@+id/addi"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:hint="ADDi"
                                    android:onClick="onClick"
                                    android:textColorHint="#000"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/lw"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="LW"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/sw"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="SW"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/sll"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="SLL"
                                    android:textSize="20dp" />
                                <Button
                                    android:id="@+id/srl"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="SRL"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/bne"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="BNE"
                                    android:textSize="20dp" />

                                <Button
                                    android:id="@+id/jump"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:onClick="onClick"
                                    android:text="JUMP"
                                    android:textSize="20dp" />


                            </LinearLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/scroll2"
                            android:layout_centerHorizontal="true"
                            android:text="I-type" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/registerRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iTypeRL">


                        <LinearLayout
                            android:id="@+id/lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal">


                            <Button

                                android:id="@+id/zero"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:onClick="onClick"
                                android:text="$Zero"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/s0"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_marginLeft="10dp"
                                android:onClick="onClick"
                                android:text="$s0"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/s1"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_marginLeft="10dp"
                                android:onClick="onClick"
                                android:text="$s1"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/t1"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_marginLeft="10dp"
                                android:onClick="onClick"
                                android:text="$t1"
                                android:textSize="20dp"

                                />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvreg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lin"
                            android:layout_centerHorizontal="true"
                            android:text="Register" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/coma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/registerRL"
                        android:onClick="onClick"
                        android:text=","
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/semiclone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/registerRL"
                        android:layout_toRightOf="@+id/coma"
                        android:onClick="onClick"
                        android:text=";"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/registerRL"
                        android:layout_toRightOf="@+id/semiclone"
                        android:hint="Space"
                            android:onClick="onClick" />

                    <Button
                        android:id="@+id/solve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/registerRL"
                        android:layout_toRightOf="@+id/space"
                        android:hint="Solve"
                        android:onClick="onClick"
                        android:textSize="20dp" />

                </RelativeLayout>


            </ScrollView>




        </LinearLayout>


</RelativeLayout>